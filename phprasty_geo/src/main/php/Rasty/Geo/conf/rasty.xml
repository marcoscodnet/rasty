	<page name="PaisUpdate" extend="EntityUpdate" class="Rasty\Geo\pages\paises\PaisUpdate" url="paises/modificar"/>
	<page name="PaisDelete" extend="EntityDelete" class="Rasty\Geo\pages\paises\PaisDelete" url="paises/eliminar"/>
	
	<page name="Provincias" extend="EntitiesList" class="Rasty\Geo\pages\provincias\Provincias" url="provincias"/>
	<page name="ProvinciaAdd" extend="EntityAdd" class="Rasty\Geo\pages\provincias\ProvinciaAdd" url="provincias/agregar"/>
